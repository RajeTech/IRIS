<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBacground"
    tools:context=".SenhaActivity">
    <Space
        android:layout_width="wrap_content"
        android:layout_height="80dp" />
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="137dp"
        android:layout_height="132dp"
        android:layout_gravity="center"
        android:contentDescription="Imblema da policia civil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/logo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_gravity="center"
        android:text="Polícia Civil - BA"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="20dp" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="331dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/tietEntrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:inputType="numberPassword"
            android:focusableInTouchMode="true"
            android:hint="senha de quatro digitos"
            android:maxLength="4"
            android:textAlignment="center" />
    </android.support.design.widget.TextInputLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="5dp" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="331dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/tietCadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:inputType="numberPassword"
            android:hint="Confirmar senha de quatro digitos"
            android:maxLength="4"
            android:textAlignment="center"
            android:visibility="gone" />
    </android.support.design.widget.TextInputLayout>
    <Space
        android:layout_width="wrap_content"
        android:layout_height="5dp" />
    <Button
        android:id="@+id/btnCadastroSenha4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@color/colorBotao"
        android:visibility="gone"
        android:text="Cadastrar Senha" />
    <Space
        android:layout_width="wrap_content"
        android:layout_height="170dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Versão: 1.0.0.1.1"
        android:textAlignment="center"
        android:textSize="10sp"
        android:textStyle="bold" />
</LinearLayout>